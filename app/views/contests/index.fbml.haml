%h1 Current DailyCaption Contest

#contests.clearfix
  #contest
    #photo
      = link_to_new_caption_form(show_media(Photo.current))
      %p#tagline== Flickr photo by: #{link_to Photo.current.author, Photo.current.photostream} | Yesterday's Winner: Jordan Isip
      %a{:name => "add_caption"}
      #add-caption-overlay= link_to_new_caption_form(image_tag "add_caption.png", :alt => "Add your own caption!")
    #new-caption.hidden
      - facebook_form_for Caption.new, :url => captions_url do |f| 
        = f.text_area :caption 
        = hidden_field_tag :photo_id, Photo.current.id
        = f.buttons "Add Caption!"
    #best-caption
      = render :partial => "caption", :object => @best_caption if @best_caption
      
  #past-contests
    %b Past Contests
    %dl
      %dt= link_to show_media(Photo.current, :square), "#"
      %dd= link_to "Yesterday", "#"
    %dl
      %dt= link_to show_media(Photo.current, :square), "#"
      %dd= link_to "Wednesday", "#"
    %dl
      %dt= link_to show_media(Photo.current, :square), "#"
      %dd= link_to "Tuesday", "#"
    %dl
      %dt= link_to show_media(Photo.current, :square), "#"
      %dd= link_to "Monday", "#"
      
    %p= link_to "View all past contests", "#"
    
#competition.clearfix
  #competing-captions
    .add-caption-link== [ #{link_to_new_caption_form("Add your own caption")} ]
    %h2 Competing Captions
    #sort.quiet== Sort the #{@captions.size} competing captions by: Time | Rank | Comments
    %fb:wall
      = render :partial => "caption", :collection => @captions

    .add-caption-link== [ #{link_to_new_caption_form("Add your own caption")} ]

  #contest-sidebar
    = image_tag("ad-205x180.gif")
