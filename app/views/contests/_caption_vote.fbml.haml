.caption-points
  %div{:id =>"points_#{dom_id(caption)}"} 
    = caption.votes_count
    %span votes
.caption-votes
  - if caption.can_vote_for_caption? current_user
    = link_to_remote "Vote Up", :url => votes_url(caption, :canvas => false), :update => "vote_#{dom_id(caption)}"
  - elsif caption.voted_for? current_user
    %span.quiet Voted
  - else
    %span.quiet Closed
