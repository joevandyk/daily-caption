<h1>Listing users</h1>

<table>
  <tr>
    <th>Site</th>
    <th>Username</th>
    <th>Email</th>
    <th>Profile url</th>
    <th>Profile image url</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.site_id %></td>
    <td><%=h user.username %></td>
    <td><%=h user.email %></td>
    <td><%=h user.profile_url %></td>
    <td><%=h user.profile_image_url %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

